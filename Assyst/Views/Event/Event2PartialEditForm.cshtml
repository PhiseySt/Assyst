@using DevExpress.AspNetCore
@model EventItem

<form asp-action="EventsEdit" name="EditForm" id="EditForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="id" hidden="hidden" />
    <input asp-for="modeRead" class="invisible" />
    <input asp-for="eventType" hidden="hidden" />
    <div class="row">
        <div class="form-group col-12">
            <label asp-for="richRemarks.content" class="control-label">Описание</label>
            <textarea asp-for="richRemarks.content" class="form-control" disabled="disabled"></textarea>
            <script type="text/javascript">
                CKEDITOR.replace('richRemarks.content', {
                    on: {
                        change: function (evt) {
                            setIsChanged(true);
                        }
                    }
                });
            </script>
            <span asp-validation-for="richRemarks.content" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Продукт</label>
            <input value="@Model.itemB?.product?.name" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label">Объект Б</label>
            <input value="@Model.itemB?.name" class="form-control" disabled="disabled" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Категория</label>
            <input value="@Model.category?.name" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Приоритет</label>
            <input value="@Model.seriousness?.name" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Срочность</label>
            <input value="@Model.priority?.name" class="form-control" disabled="disabled" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <label class="control-label">Назначенная группа</label>
            <input value="@Model.assignedServDept?.name" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label">Назначенный специалист</label>
            <input value="@Model.assignedUser?.name" class="form-control" disabled="disabled" />
        </div>
    </div>
